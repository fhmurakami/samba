<h3>
  <%= participant.first_name %> <%= participant.last_name %>
</h3>
<div id="<%= dom_id participant %>" class="attributes">
  <div class="participant attribute">
    <span>
      <strong><%= "#{t 'activerecord.attributes.user/participant.birth_date'}:" %></strong>
    </span>
    <p>
      <%= l(participant.birth_date) %>
    </p>
  </div>
  <div class="participant attribute">
    <strong><%= "#{t('activerecord.models.grouping')}:" %></strong>
    <table>
      <thead>
        <tr>
          <th><%= t "helpers.label.grouping.id" %></th>
          <th colspan="2"><%= t "helpers.label.grouping.name" %></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td class="id-cell">
            <%= participant.grouping&.id %>
          </td>
          <td class="name-cell">
            <%= participant.grouping&.name %>
          </td>
          <td class="link-cell">
            <%= link_to t("groupings.show"), participant.grouping, class: "text-xs" %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <%= link_to t("participants.edit"), edit_participant_path(participant), class: "btn btn-small lavender" %>
</div>
